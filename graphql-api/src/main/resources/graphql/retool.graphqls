type Query {
    # The API Version
    version: String!
    users(id: Int): User
    search(query: String): User
    loans(id: Int): Loan
}

type User {
    id: Int!
    ari: String!
    first_name: String!
    last_name: String!
    email: String!
    phone: String!
    status: String!
}

type Loan {
    id: Int!
    ari: String!
	autopay: Boolean!
	merchant: String!
	total_paid: Float!
	total_remaining: Float!
	purchase_total: Float!
	monthly_amount: Float!
}