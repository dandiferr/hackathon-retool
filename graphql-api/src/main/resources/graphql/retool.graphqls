type Query {
    # The API Version
    version: String!
    getMerchants: [Merchant]
    getMerchantById(id: Int): Merchant
    getMerchantByAri(ari: String): Merchant
    searchMerchants(query: String): [Merchant]
}

type Merchant {
    id: Int!
    ari: String!
    merchantName: String!
    website: String!
    affirmTxnFee: Float!
    integrationType: String!
    adminName: String!
    adminEmail: String!
    adminPhone: String!
    fraudName: String!
    fraudEmail: String!
    fraudPhone: String!
}

type Mutation {
    createMerchant: Merchant
    updateMerchant(ari: String, merchant: MerchantInput): Merchant
}

input MerchantInput {
    merchantName: String!
    website: String!
    affirmTxnFee: Float!
    integrationType: String!
    adminName: String!
    adminEmail: String!
    adminPhone: String!
    fraudName: String!
    fraudEmail: String!
    fraudPhone: String!
}
